<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupActivity">

    <ImageView
        android:layout_marginLeft="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_text_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/siginup_text"/>
    <ImageView
        android:layout_width="196dp"
        android:layout_height="79dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siginup_text"

        android:src="@drawable/todaymeal"/>

    <ImageView
        android:id="@+id/vec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="@id/rec"
        app:layout_constraintStart_toStartOf="@id/rec"
        android:layout_marginStart="10sp"
        android:layout_marginTop="15sp"
        />


    <ImageView
        android:id="@+id/rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:src="@drawable/rectangle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="100sp"/>

    <EditText
        android:id="@+id/school"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/rec"
        app:layout_constraintEnd_toEndOf="@id/rec"
        app:layout_constraintTop_toTopOf="@id/school_3"
        android:hint="학교를 입력해주세요"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        />
    <ImageView
        android:id="@+id/school_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/schoolicon"
        app:layout_constraintTop_toTopOf="@id/school_3"
        app:layout_constraintStart_toStartOf="@id/school_3"
        android:layout_marginStart="10sp"
        android:layout_marginTop="15sp"
        />


    <ImageView
        android:id="@+id/school_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:src="@drawable/rectangle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rec" />



    <EditText
        android:id="@+id/pn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/rec"
        app:layout_constraintEnd_toEndOf="@id/rec"
        app:layout_constraintTop_toTopOf="@id/rec"
        android:hint="E-mail"
        android:background="@android:color/transparent"
        android:layout_marginTop="10sp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lock"
        app:layout_constraintStart_toStartOf="@id/rec2"
        app:layout_constraintTop_toTopOf="@id/rec2"
        android:layout_marginTop="15sp"
        android:layout_marginStart="12sp"
        />

    <ImageView
        android:id="@+id/rec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:src="@drawable/rectangle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="250sp"
        android:layout_height="45sp"
        app:layout_constraintStart_toStartOf="@id/rec2"
        app:layout_constraintEnd_toEndOf="@id/rec2"
        app:layout_constraintTop_toTopOf="@id/rec2"
        android:background="@android:color/transparent"
        android:layout_marginTop="10sp"
        android:inputType="textPassword"
        android:hint="비밀번호"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lock"
        app:layout_constraintStart_toStartOf="@id/rec3"
        app:layout_constraintTop_toTopOf="@+id/rec3"
        android:layout_marginTop="15sp"
        android:layout_marginStart="12sp"
        />

    <ImageView
        android:id="@+id/rec3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:src="@drawable/rectangle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rec2" />

    <EditText
        android:id="@+id/pwcheck"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/rec3"
        app:layout_constraintEnd_toEndOf="@id/rec3"
        app:layout_constraintTop_toTopOf="@id/rec3"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:hint="비밀번호 확인"
        />

    <Button
        android:id="@+id/btn_siginup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="570dp"
        android:text="회원가입"
        android:textStyle="bold"
        android:background="@drawable/rectangle2"
        android:backgroundTint="#3891FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/haveaccount"
        android:layout_marginBottom="30sp"
        />

    <ImageView
        android:id="@+id/haveaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/haveaccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_login"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="16sp"
        />


    <ImageView
        android:id="@+id/tv_login"
        android:src="@drawable/ic_gologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="200sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>